{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "Data source",
    "type": "object",
    "description": "Data source",
    "properties":{
        "buttonSource" : {
            "title": "Button data source",
            "type": "object",
            "description": "Button data source",
            "allOf": [ 
                { "$ref": "dataSource.id.schema.json" } ,
                { "$ref": "dataSource.properties.button.schema.json" } 
            ],
            "properties" : {
                "gamepadButtonsIndex" : {
                    "allOf" : [ { "$ref" : "gamepadIndex.schema.json" }],
                    "description" : "Index of button in Gamepad.buttons"
                }
            },
            "required" : ["gamepadButtonIndex"]
        }
    },
    "required" : ["buttonSource"]
}